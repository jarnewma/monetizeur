
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

  <% if user_signed_in? == false %>
    <ul class="navbar-nav mr-auto">
      <li class= "nav-item "><%= link_to "Log in", new_user_session_path, class: "nav-link"%> </li>
      <li class= "nav-item"><%= link_to "Sign up", new_user_registration_path, class: "nav-link" %> </li>
    </ul>

  <% else %>

      <div class="nav-link">
        <% notify = false %>
        <% current_user.subscriptions.each { |n| notify = true if (n.notification_date && n.notify_today?) } %>

        <% if notify %>
          <div class="notify-circle"></div>
        <% else %>
          <div id="notice_wrapper">
            <p>You have no notifications today</p>
          </div>
        <% end %>
        <div class="dropdown nav-link">
          <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-bell"></i>
          </div>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <p class="dropdown-item">hey</p>
            <p class="dropdown-item">ho</p>
          </div>
        </div>
      </div>


      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "My Calendar", calendar_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Subscriptions", subscriptions_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Analytics", analysis_path, class: "dropdown-item" %>
            <%= link_to "Payment Methods", payment_methods_path , class: "dropdown-item" %>
            <%= link_to "My Profile", my_profile_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>
